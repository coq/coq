CI_TARGETS=ci-bedrock2 \
    ci-bignums \
    ci-color \
    ci-compcert \
    ci-coq-dpdgraph \
    ci-coquelicot \
    ci-corn \
    ci-cpdt \
    ci-cross-crypto \
    ci-elpi \
    ci-ext-lib \
    ci-equations \
    ci-fcsl-pcm \
    ci-fiat-crypto \
    ci-fiat-crypto-legacy \
    ci-fiat-parsers \
    ci-flocq \
    ci-formal-topology \
    ci-geocoq \
    ci-hott \
    ci-iris-lambda-rust \
    ci-ltac2 \
    ci-math-classes \
    ci-math-comp \
    ci-mtac2 \
    ci-pidetop \
    ci-quickchick \
    ci-sf \
    ci-tlc \
    ci-unimath \
    ci-vst

.PHONY: ci-all $(CI_TARGETS)

ci-help:
	echo '*** Coq CI system, please specify a target to build.'
	false

ci-all: $(CI_TARGETS)

ci-color: ci-bignums

ci-math-classes: ci-bignums

ci-corn: ci-math-classes

ci-quickchick: ci-ext-lib

ci-formal-topology: ci-corn

# Generic rule, we use make to ease travis integration with mixed rules
$(CI_TARGETS): ci-%:
	+./dev/ci/ci-wrapper.sh $*

