(rule
 (targets coqtop-prelude)
 (deps
  %{bin:coqtop}
  %{project_root}/theories/Init/Prelude.vo)
 (action
  (with-stdout-to coqtop-prelude
   (progn
    (echo "#!/usr/bin/env bash\n")
    (bash "echo '$(dirname $0)/%{bin:coqtop} -coqlib $(dirname $0)/%{project_root}' \\$@")
    (run chmod +x %{targets})))))

(rule
