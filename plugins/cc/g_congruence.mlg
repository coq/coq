{

open Ltac_plugin
open Cctac
open Stdarg

}

DECLARE PLUGIN "cc_plugin"

(* Tactic registration *)

TACTIC EXTEND cc
| [ "congruence" int_opt(n) ] ->
   { congruence_tac (Option.default 1000 n) [] }
| [ "congruence" int_opt(n) "with" ne_constr_list(l) ] ->
   { congruence_tac (Option.default 1000 n) l }
| [ "simple" "congruence" int_opt(n) ] ->
   { simple_congruence_tac (Option.default 1000 n) [] }
| [ "simple" "congruence" int_opt(n) "with" ne_constr_list(l) ] ->
   { simple_congruence_tac (Option.default 1000 n) l }
END

TACTIC EXTEND f_equal
| [ "f_equal" ] -> { f_equal }
END
